{% extends 'base.html.twig' %}

{% block title %}Hello DetailsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1>DetailsPage</h1>
    {{ dump(data)}}

    {{data.startdate|date}} <br>
    {{data.User.picture}}<br>
    {{data.function}} voor {{data.User.firstname}} <br>
    {{data.description}}<br/>
    
    {# Other Vacancies from the Company #}
    {% for vacancies in data.User.vacancies %}
        {% if vacancies.id != data.id %}
            {{ dump(vacancies)}}
        {% endif %}
    {% endfor %}
        
{% endblock %}
